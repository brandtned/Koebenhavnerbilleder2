<section class="grid sm:grid-cols-3 p-3">
    <div class="grid justify-items-center overflow-hidden">
        <img class="p-4 transitaion hover:scale-105" src="/src/assets/images/kobenhavnerbilleder-sten-simons.jpg.png"/>
